<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Schedule"
    android:background="@android:color/darker_gray">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtUploadSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Class Schedule"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChooseFile"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:background="@drawable/rounded_radius_button"
        android:text="Choose File"
        app:layout_constraintEnd_toStartOf="@+id/btnUpload"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="@+id/imgViewSchedule"
        app:layout_constraintTop_toBottomOf="@+id/imgViewSchedule" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpload"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_radius_button"
        android:text="Upload"
        app:layout_constraintEnd_toEndOf="@+id/imgViewSchedule"
        app:layout_constraintTop_toBottomOf="@+id/imgViewSchedule" />

    <ImageView
        android:id="@+id/imgViewSchedule"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/image_border"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUploadSchedule"
        app:srcCompat="@drawable/instruction" />


</androidx.constraintlayout.widget.ConstraintLayout>
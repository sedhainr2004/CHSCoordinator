<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="visible"
    android:padding="10dp">



    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8E5B1B">

            <ImageView
                android:id="@+id/imgViewECslogo"
                android:layout_width="125dp"
                android:layout_height="113dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/txtECsTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="EC Title"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/imgViewECslogo"
                app:layout_constraintTop_toTopOf="@+id/imgViewECslogo" />

            <TextView
                android:id="@+id/txtSponsor"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Sponsor: "
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtECsTitle"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/txtECsTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtECsTitle" />

            <TextView
                android:id="@+id/txtSponsorEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Email: "
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/txtSponsor"
                app:layout_constraintTop_toBottomOf="@+id/txtSponsor" />

            <ImageView
                android:id="@+id/imgViewTwitterECBtn"
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toEndOf="@+id/imgViewECslogo"
                app:layout_constraintTop_toBottomOf="@+id/txtSponsorEmail"
                app:srcCompat="@drawable/icons8twitter" />

            <ImageView
                android:id="@+id/imgViewIGBtn"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="48dp"
                app:layout_constraintEnd_toEndOf="@+id/txtSponsorEmail"
                app:layout_constraintTop_toBottomOf="@+id/txtSponsorEmail"
                app:srcCompat="@drawable/floatingactioninstabtn" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>